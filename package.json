{
	"name": "@ctx-core/tempfile",
	"version": "1.1.19",
	"description": "Simple functions to create tempfiles",
	"keywords": [
		"ctx-core",
		"tempfile"
	],
	"homepage": "https://github.com/ctx-core/tempfile#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/tempfile/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/tempfile.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"files": [
		"*.d.ts",
		"*.js",
		"*.json",
		"./tempfile_"
	],
	"types": "./index.d.ts",
	"exports": {
		".": "./index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": ":",
		"clean": ":",
		"exec": "$@",
		"prepublishOnly": "pnpm clean && pnpm build && pnpm test",
		"test": "pnpm test-unit && check-dts",
		"test-unit": "tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"test-unit-coverage": "c8 pnpm test-unit"
	},
	"dependencies": {
		"@ctx-core/crypto": "^1.3.19",
		"@ctx-core/dom": "^15.1.19",
		"@ctx-core/string": "^12.4.19",
		"@ctx-core/uri": "^12.5.19"
	},
	"devDependencies": {
		"c8": "^8.0.1",
		"check-dts": "^0.7.2",
		"tsx": "^4.1.4",
		"typescript": "next",
		"uvu": "^0.5.6"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"sideEffects": false
}